@model BloodBankProjectMVCCore.Models.BloodBankModel

@{
    ViewData["Title"] = "AddBloodBank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddBloodBank</h1>

<h4>BloodBankModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBloodBank">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BloodBankName" class="control-label"></label>
                <input asp-for="BloodBankName" class="form-control" />
                <span asp-validation-for="BloodBankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"].ToString();');
                window.location.href = "@Url.Action("Index","BloodBank")";
            </script>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

