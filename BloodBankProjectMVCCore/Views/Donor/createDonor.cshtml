@model BloodBankProjectMVCCore.Models.DonorModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create Donor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>New Donor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDonor">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label value="BloddType" name="BloddType" class="control-label">BloddType</label>
                <select asp-for="BloodTypeID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfBloodType,"Value","Text"))"></select>
                <span asp-validation-for="BloodTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label value="User" name="User" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfUser,"Value","Text"))"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <br>
            <br />
            <div class="form-group">
                <input type="submit" value="Donor Register" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>

